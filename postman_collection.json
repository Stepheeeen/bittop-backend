{
  "info": {
    "name": "BITTOP Backend",
    "_postman_id": "bittop-collection",
    "description": "Postman collection for BITTOP crypto investment platform backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"testuser@example.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/auth/signup",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["auth","signup"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"testuser@example.com\",\n    \"password\": \"yourpassword\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["auth","login"]
        }
      }
    },
    {
      "name": "Deposit to Wallet",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"coin\": \"bitcoin\",\n    \"amountCrypto\": 0.01\n}"
        },
        "url": {
          "raw": "http://localhost:4000/wallet/deposit",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["wallet","deposit"]
        }
      }
    },
    {
      "name": "Get Market Prices",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:4000/market",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["market"]
        }
      }
    },
    {
      "name": "Get Portfolio",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:4000/portfolio",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["portfolio"]
        }
      }
    },
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:4000/user/profile",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["user","profile"]
        }
      }
    },
    {
      "name": "Update Phone",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"phone\": \"+2348101234567\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/user/phone",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["user","phone"]
        }
      }
    },
    {
      "name": "Change Password",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"oldPassword\": \"oldpass\",\n    \"newPassword\": \"newpass123\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/user/password",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["user","password"]
        }
      }
    }
  ],
  "variable": [
    { "key": "token", "value": "" }
  ]
}
